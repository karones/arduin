
int ledPin = 13;                 // Светодиод подключенный к вход/выходу 13
int dataPin = 5;                   // кнопка на входе 7
int val = 0;                     // переменная для хранения значения
int clockPin = 12;
void setup()
{
   Serial.begin(9600);
  pinMode(ledPin, OUTPUT);       // устанавливает режим работы - выход для 13го вход/выхода (pin)
  pinMode(clockPin, OUTPUT );         //  устанавливает режим работы - вход для 7го вход/выхода (pin)
pinMode(dataPin, OUTPUT);
}
 
void loop()
{
   int data;
  for (data=2; data<8192; data=data+2)
  {
    shiftOut(dataPin, clockPin, LSBFIRST, data); 
    shiftOut(dataPin, clockPin,LSBFIRST, (data >> 8));  
    
   delay (10); 
   shiftOut(dataPin, clockPin, LSBFIRST, data); 
    shiftOut(dataPin, clockPin,LSBFIRST, (data >> 8));
   delay (10); 
   shiftOut(dataPin, clockPin, LSBFIRST, data); 
    shiftOut(dataPin, clockPin,LSBFIRST, (data >> 8));
   delay (250); 
  }
}

